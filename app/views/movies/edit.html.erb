<div class= "container text-light">
<h1>Edit</h1>
<%= form_for @movie, url:{action: "update"} do |f| %>

        <%= f.label :image, 'Image : ' %><br>
        <%= f.text_field :image %><br><br>

        <%= f.label :title, 'title : ' %><br>
        <%= f.text_field :title %><br><br>

        <%= f.label :year, 'Year : ' %><br>
        <%= f.text_field :year %><br><br>

        <%= f.label :star, 'Star :' %><br>
        <%= f.text_field :star  %><br><br>

        <%= f.submit " Save " , :class => "btn btn-secondary btn-lg thht" %>

<% end %>
</div>

<%= link_to 'Show', @movie , :class => "btn btn-secondary btn-lg thht" %> |
<%= link_to 'Back', movies_path , :class => "btn btn-secondary btn-lg thht"%>

